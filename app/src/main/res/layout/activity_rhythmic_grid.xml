<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RhythmicGridActivity"
    android:background="@color/black">

    <ToggleButton
        android:background="#595959"
        android:id="@+id/btnPlayCurrentPattern"
        style="@style/button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textOff="Play"
        android:textOn="Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/btnPlayAllPatterns"
        style="@style/button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#595959"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textOff="Play song"
        android:textOn="Stop song"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayCurrentPattern" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>