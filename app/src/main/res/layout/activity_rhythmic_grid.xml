<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RhythmicGridActivity"
    android:background="@color/background">

    <EditText
        android:id="@+id/editTextBpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:gravity="center"
        android:width="120dp"
        android:text="120"
        android:maxLength="3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnMetronome"
        app:layout_constraintEnd_toStartOf="@+id/btnMetronome"
        app:layout_constraintTop_toTopOf="@+id/btnMetronome" />

    <ToggleButton
        android:id="@+id/btnMetronome"
        style="@style/button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:gravity="center_horizontal"
        android:paddingStart="0dp"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@+id/viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnSave"
        style="@style/button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="save"
        app:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

    <Button
        android:id="@+id/btnOpen"
        style="@style/button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="open"
        app:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

    <ToggleButton
        android:id="@+id/btnPlayCurrentPattern"
        style="@style/toggle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textOff="PATT"
        android:textOn="PATT"
        android:textColor="@drawable/play_mode_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnPlay"
        app:layout_constraintTop_toTopOf="@+id/btnPlay" />

    <ToggleButton
        android:id="@+id/btnPlayAllPatterns"
        style="@style/toggle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textColor="@drawable/play_mode_color"
        android:textStyle="bold"
        android:textOff="ALL"
        android:textOn="ALL"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
        app:layout_constraintStart_toEndOf="@+id/btnPlay" />

    <ToggleButton
        android:id="@+id/btnPlay"
        android:background="@drawable/play_toggle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/gray"
        android:minHeight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </GridLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>