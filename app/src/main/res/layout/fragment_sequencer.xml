<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Sequencer">

    <Button
        android:id="@+id/btnClearPattern"
        style="@style/button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="CLEAR"
        app:backgroundTint="@color/pad_pink"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <ToggleButton
        android:id="@+id/btnMetronome"
        style="@style/toggle_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textColor="@drawable/play_mode_color"
        android:textOff="METRO"
        android:textOn="METRO"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/btnSave"
        style="@style/button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="save"
        app:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

    <Button
        android:id="@+id/btnOpen"
        style="@style/button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="open"
        app:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

    <ToggleButton
        android:id="@+id/btnPlayCurrentPattern"
        style="@style/toggle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textColor="@drawable/play_mode_color"
        android:textOff="THIS"
        android:textOn="THIS"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnPlay"
        app:layout_constraintTop_toTopOf="@+id/btnPlay" />

    <ToggleButton
        android:id="@+id/btnPlayAllPatterns"
        style="@style/toggle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textColor="@drawable/play_mode_color"
        android:textOff="ALL"
        android:textOn="ALL"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
        app:layout_constraintStart_toEndOf="@+id/btnPlay" />

    <ToggleButton
        android:id="@+id/btnPlay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/play_toggle_button"
        android:checked="false"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/btnMetronome" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:minHeight="40dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/bpm_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

    </GridLayout>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/bpm_picker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:np_dividerColor="@color/white"
        app:np_dividerType="underline"
        app:np_max="240"
        app:np_min="30"
        app:np_orientation="horizontal"
        app:np_selectedTextColor="@color/pad_pink"
        app:np_selectedTextSize="20sp"
        app:np_textColor="@color/white"
        app:np_textSize="15sp"
        app:np_value="120"
        app:np_wheelItemCount="6" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/bars_picker"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/btnMetronome"
        app:np_dividerColor="@color/white"
        app:np_dividerType="side_lines"
        app:np_max="8"
        app:np_min="1"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/pad_pink"
        app:np_selectedTextSize="20sp"
        app:np_textColor="@color/white"
        app:np_textSize="15sp"
        app:np_value="4"
        app:np_wheelItemCount="3" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/step_in_beat_picker"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        app:layout_constraintStart_toEndOf="@+id/bars_picker"
        app:layout_constraintTop_toTopOf="@+id/btnMetronome"
        app:np_dividerColor="@color/white"
        app:np_dividerType="underline"
        app:np_max="6"
        app:np_min="1"
        app:np_orientation="horizontal"
        app:np_selectedTextColor="@color/pad_pink"
        app:np_selectedTextSize="20sp"
        app:np_textColor="@color/white"
        app:np_textSize="15sp"
        app:np_value="2"
        app:np_wheelItemCount="3" />

</androidx.constraintlayout.widget.ConstraintLayout>