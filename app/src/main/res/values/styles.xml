<resources>
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">start|top</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">6pt</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="toggle_button" parent="@android:style/Widget.Button">
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">6pt</item>
        <item name="android:background">@drawable/toggle_button</item>
    </style>
</resources>